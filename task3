public class C3 {
    public static void main(String[] args){
        double n1 = 4;
        double n2 = 1;
        double n3 = 1;
        double n4 = 1;
        formula(n1,n2,n3,n4);
    }

    static void formula (double a, double b, double c, double d) {
        double f;
        f = a*(b +(c/d));
        System.out.println(f);
    }
}
